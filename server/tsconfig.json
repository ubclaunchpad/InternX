{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
   "filesGlob": [
      "/**/*.ts"
   ],
   "typeRoots": [
      "./node_modules/@types"
   ],
   "exclude": [
      "node_modules"
   ]
}
